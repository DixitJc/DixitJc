#include<iostream>
using namespace std;

class complex
{
private:
  float real, imag;
public:
    complex ()
  {
    real = 0;
    imag = 0;
  }
  complex (float r, float i)
  {
    real = r;
    imag = i;
  }
  void display ()
  {
    cout << "+" << imag << "i" << endl;
  }
  friend complex add (complex c1, complex c2);

};

complex
add (complex c1, complex c2)
{
  float r = c1.real + c2.real;
  float i = c1.imag + c2.imag;

  return complex (r, i);

}

int
main ()
{
  complex c1 (2.5, 3.8);
  complex c2 (1.5, 2.5);
  complex sum = add (c1, c2);
  cout << "complex number 1  :";
  c1.display ();
  cout << "complex number2: ";
  c2.display ();
  cout << "sum: ";
  sum.display ();
  return 0;
}
